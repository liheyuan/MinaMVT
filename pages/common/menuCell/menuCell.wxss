/* pages/common/cell/cell.wxss */

.kind-list-item {
  margin: 20rpx 0;
  background-color: #FFFFFF;
  border-radius: 4rpx;
  overflow: hidden;
}
.kind-list-item:first-child {
  margin-top: 0;
}
.kind-list-text{
  flex: 1;
}
.kind-list-img {
  width: 60rpx;
  height: 60rpx;
}
.kind-list-item-head {
  padding: 30rpx;
  display: flex;
  align-items: center;

  transition: opacity .3s;
}
.kind-list-item-head-show {
  opacity: .2;
}
.kind-list-item-body {
  height: 0;
  overflow: hidden;
}
.kind-list-item-body-show {
  height: auto;
}